{
  "compilerOptions": {
    "baseUrl": "src",
    "outDir": "dist",
    "module": "commonjs",
    "moduleResolution": "node",
    "target": "es2015",
    "allowJs": false,
    "allowSyntheticDefaultImports": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "noImplicitAny": false,
    "removeComments": false,
    "declaration": true,
    "sourceMap": true
  },
  "compileOnSave": false,
  "buildOnSave": false,
  "include": [
    "src/**/**.ts"
  ],
  "exclude": [
    "src/**/**.spec.ts"
  ]
}